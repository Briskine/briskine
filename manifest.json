{
  "manifest_version": 2,
  "name": "Quicktext for Gmailâ„¢",
  "version": "1.0",
  "description": "",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background_scripts/js/_dist/gq-bg.js"
    ],
    "styles": [
      "background_scripts/css/_dist/gq-bg.css"
    ]
  },
  "options_page": "pages/bg.html#options",
  "permissions": [
    "https://mail.google.com/*",
    "https://gmail-quicktext.com/*",

    "tabs",
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://gmail-quicktext.com/*"
      ],
      "js": [
        "content_scripts/js/_dist/gq-content.js"
      ],
      "css": [
        "content_scripts/css/_dist/gq-content.css"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "pages/bg.html#popup"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://gmail-quicktext.com; object-src 'self'"
}
