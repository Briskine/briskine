{
  "manifest_version": 2,
  "name": "Quicktext for Gmail™",
  "version": "1.0.0",
  "description": "",
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/background_scripts/js/_dist/gq-bg.js"
    ],
    "styles": [
      "src/background_scripts/css/_dist/gq-bg.css"
    ]
  },
  "options_page": "src/pages/bg.html#/options",
  "permissions": [
    "https://mail.google.com/*",
    "https://gmail-quicktext.com/*",

    "tabs",
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://gmail-quicktext.com/*",
        "http://localhost/gmail/*",
        "https://localhost/gmail/*"
      ],
      "js": [
        // "src/content_scripts/js/_dist/gq-content.js"
        "bower_components/jquery/jquery.js",
        "bower_components/underscore/underscore.js",
        "bower_components/underscore.string/dist/underscore.string.min.js",
        "src/content_scripts/js/completion.js",
        "src/content_scripts/js/handlers.js",
        "src/content_scripts/js/keyboard.js",
        "src/content_scripts/js/main.js",
        "src/content_scripts/js/utils.js"
      ],
      "css": [
        "src/content_scripts/css/_dist/gq-content.css"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "page_action": {
    "default_title": "Quicktext for Gmail™",
    "default_icon": "src/icons/icon48.png",
    "default_popup": "src/pages/bg.html#/popup"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://gmail-quicktext.com; object-src 'self'"
}
