.qt-dropdown
  position fixed
  z-index 999
  overflow hidden
  overflow-y auto
  margin 0
  padding 2px
  max-height 20em
  box-shadow 2px 3px 5px rgba(0, 0, 0, 0.2)
  border-radius 3px
  border 1px solid #c0c0c0
  background #fff
  list-style none
  font-size 90%
  font-family monospace

  li
    margin 0
    padding 0 4px
    border-radius 2px
    max-width 20em
    max-height 15px
    overflow hidden
    word-wrap break-word
    text-overflow ellipsis
    color #000
    cursor pointer

    &.default
      cursor default
      max-height 4em

    &.active
      background #08f
      color #fff

      .qt-title
        color #f3f3f3

    .qt-title
      color #808080

.
qt-shortcut
