{
  "manifest_version": 2,
  "name": "Quicktext for Gmail™",
  "version": "1.0.0",
  "description": "",
  "icons": {
    "16": "ext/icons/icon16.png",
    "48": "ext/icons/icon48.png",
    "128": "ext/icons/icon128.png"
  },
  "background": {
    "scripts": [
      "ext/background/js/background.js"
    ],
    "styles": [
      "ext/background/css/background.css"
    ]
  },
  "options_page": "ext/pages/bg.html#/options",
  "permissions": [
    "http://mail.google.com/*",
    "https://mail.google.com/*",
    "https://gmail-quicktext.com/*",

    "tabs",
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://mail.google.com/*",
        "https://mail.google.com/*",
        "https://gmail-quicktext.com/*"
      ],
      "js": [
        "ext/content/js/content.js"
      ],
      "css": [
        "ext/content/css/content.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "page_action": {
    "default_title": "Quicktext for Gmail™",
    "default_icon": "ext/icons/icon48.png",
    "default_popup": "ext/pages/bg.html#/popup"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://gmail-quicktext.com; object-src 'self'"
}
