/* Editor styles
 */

toolbar-bg = #f8f8f8;

.editor-wrapper {
    .toolbar {
        padding: 3px;
        border-color: darken(toolbar-bg, 4%) darken(toolbar-bg, 10%);
        border-width: 1px 1px 0;
        border-style: solid;
        border-radius: 3px 3px 0 0;
        background: toolbar-bg;
        .btn {
            margin-bottom: 0;
            border-radius: 2px;
            background: toolbar-bg;
            border-color: darken(toolbar-bg, 12%);
            &:hover {
                background: #fff;
                border-color: darken(toolbar-bg, 16%);
            }
        }
    }
    .editor {
        border: 1px solid #bfbfbf;
        border-radius: 0 0 3px 3px;

        [contenteditable]:focus {
            outline: 0;
            box-shadow: none;
        }
    }
    .ql-container {
        padding: 7px 7px 9px;
    }
    .ql-active {
        color: #337ab7;
    }
    .ql-tooltip .btn {
        width: 20%;
        float: right;
        margin-left: 5px;
    }
    .ql-editor {
        min-height: 340px;
    }
}

.ql-toolbar {
    .ql-picker .ql-picker-label {
        background-color: toolbar-bg !important;
    }
    .ql-format-button.fa-code {
        font-size: 18px;
        &.ql-active {
            color: #06c;
        }
    }
}
