@import "../../../bower_components/bootstrap/dist/css/bootstrap.css"
@import "bootstrap-theme.css"

.page-content-wrapper
    padding-top 35px

.logo-container
    text-align center

#sidebar-wrapper
    margin-left -250px
    left 250px
    width 250px
    background-color #f5f5f5
    box-shadow inset -10px 0 10px -7px #ccc
    position fixed
    height 100%
    overflow-y auto

    .sidebar-nav
        position absolute
        top 0
        width 250px
        list-style none
        margin 0
        padding 0

        .sidebar-brand
            text-align center
            padding-top 35px
            padding-bottom 35px

        li
            padding 0px 20px 20px 20px

            > .section-header
                padding-bottom 8px
                font-size 16px
                font-weight bold
                color #777

    .sidebar-footer
        position absolute
        bottom 0px
        left 0px
        margin-right 20px
        margin-left 20px
        width 205px

        .sidebar-footer-links
            text-align center
            padding-bottom 10px

    .profile
        .profile-picture
            vertical-align middle
            display table-cell
            img
                border 2px #fff solid
        .profile-container
            padding-left 10px
            display table-cell
            vertical-align middle
        .profile-name
            font-size 16px
            font-weight bold
        .profile-email
            font-size 12px
        .profile-extra
            margin-top 7px
        .anonymous
            font-size larger


.toggle-sidebar
   cursor pointer
   position absolute
   bottom 170px
   &.toggle-hide
    right 0px
   &.toggle-show
    left 0px

   background-color #FDFDFD
   padding 5px

   span
       font-size 20px

.search-table
    width 320px

.quicktext-form
    margin-left 10px
    margin-right 10px

.quicktext-filters
    margin-top 10px
    margin-bottom 10px

#popup-container
    min-width 629px
    padding-top 13px
    .search-table
        width: 100%

    #quicktext-table-container
        height 300px
        overflow-y auto

        tr
            cursor pointer
