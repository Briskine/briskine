/* Sidebar footer
 */
.sidebar-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    padding: emCalc(16) emCalc(20) emCalc(20) emCalc(22);

    .twitter-badge {
        width: 120px;
    }

    .sync-status {
        transition: all .1s ease-in;
        opacity: .6;

        &:hover {
